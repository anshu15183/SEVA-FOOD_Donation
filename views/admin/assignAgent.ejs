<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Agent</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css"> <!-- Link to the global CSS file -->
</head>
<body>
    <main>
        <!-- Sidebar inclusion -->
        <%- include('../partials/adminSidebar') %>

        <!-- Main content section -->
        <div id="main-wrapper">
            <!-- Header section -->
            <div class="bg-white shadow-sm p-3 d-flex justify-content-between align-items-center">
                <span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
                <h5 class="m-0 color-theme">Assign Agent</h5>
            </div>

            <!-- Assign Agent Form -->
            <form action="/admin/donation/assign/<%= donation._id %>" method="POST" class="assign-agent-form border m-4 my-3 p-4 bg-white rounded-2 shadow">
                <div class="row">
                    <!-- Donor Name Input -->
                    <div class="mb-4 col-sm-4">
                        <label for="donor" class="form-label">Donor Name</label>
                        <input type="text" class="form-control" id="donor" value="<%= donation.donor.firstName + ' ' + donation.donor.lastName %>" disabled>
                    </div>

                    <!-- Address Input -->
                    <div class="mb-4 col-sm-8">
                        <label for="address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="address" value="<%= donation.address %>" disabled>
                    </div>
                </div>

                <!-- Agent Selection Dropdown -->
                <div class="mb-4">
                    <label for="agent" class="form-label">Select Agent</label>
                    <select name="agent" class="form-select" id="agent">
                        <% for(let i=0; i<agents.length; i++) { %>
                            <option value="<%= agents[i]._id %>"><%= agents[i].firstName + " " + agents[i].lastName %></option>
                        <% } %>
                    </select>
                </div>

                <!-- Message to Agent Input -->
                <div class="mb-4">
                    <label for="msg" class="form-label">Message to Agent</label>
                    <textarea type="text" name="adminToAgentMsg" class="form-control" id="msg" placeholder="You can write here some msg.."></textarea>
                </div>

                <!-- Assign Button -->
                <button type="submit" class="btn btn-primary w-75 d-block m-auto mt-4">Assign</button>
            </form>
        </div>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="script.js"> <!-- Link to the global JavaScript file -->
    </script>
</body>
</html>

<style>
	/* General Styles */
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f9f9f9;
}

/* Sidebar Styles */
.admin-sidebar {
    width: 250px;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background-color: #343a40;
    color: white;
    z-index: 1000;
}

/* Main Content Styles */
#main-wrapper {
    margin-left: 250px;
    padding: 20px;
    transition: margin-left 0.3s ease;
}

/* Header Styling */
.bg-white {
    background-color: #fff !important;
    border-bottom: 1px solid #dee2e6;
}

.color-theme {
    color: #007bff;
}

/* Form Styles */
.assign-agent-form {
    background-color: #ffffff;
    border: 1px solid #ced4da;
    border-radius: 5px;
    padding: 20px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.form-label {
    font-weight: 500;
    color: #495057;
}

.form-control, .form-select {
    border: 1px solid #ced4da;
    padding: 10px;
    font-size: 16px;
}

.btn-primary {
    background-color: #007bff;
    border-color: #007bff;
}

.btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
}

/* Sidebar Toggle Button */
#sidebar-toggler-btn {
    cursor: pointer;
}

/* Responsive Design */
@media (max-width: 768px) {
    .admin-sidebar {
        width: 100%;
        height: auto;
        position: relative;
    }
    #main-wrapper {
        margin-left: 0;
    }
}

</style>

<script>
	// script.js

const sidebarToggleBtn = document.getElementById('sidebar-toggler-btn');
const mainWrapper = document.getElementById('main-wrapper');

sidebarToggleBtn.addEventListener('click', () => {
    if (mainWrapper.style.marginLeft === '0px' || mainWrapper.style.marginLeft === '') {
        mainWrapper.style.marginLeft = '250px'; // Sidebar open
    } else {
        mainWrapper.style.marginLeft = '0px'; // Sidebar closed
    }
});

</script>