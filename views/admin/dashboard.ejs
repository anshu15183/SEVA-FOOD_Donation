<main>
	<%- include('../partials/adminSidebar') %>

	<div id="main-wrapper">
		<div class="bg-white shadow-sm p-3">
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Dashboard</h5>
		</div>

		<div class="d-flex gap-3 flex-wrap m-4 text-white">
			<div class="bg-primary rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numAdmins %></div>
				<div class="fs-5">admins</div>
			</div>

			<div class="bg-success rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numDonors %></div>
				<div class="fs-5">donors</div>
			</div>

			<div class="bg-primary rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numAgents %></div>
				<div class="fs-5">agents</div>
			</div>

			<div class="bg-success rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numPendingDonations %></div>
				<div class="fs-5">new donation requests</div>
			</div>

			<div class="bg-warning rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numAcceptedDonations %></div>
				<div class="fs-5">donations to be assigned to agent</div>
			</div>

			<div class="bg-danger rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numAssignedDonations %></div>
				<div class="fs-5">donations not collected yet</div>
			</div>

			<div class="bg-success rounded p-3" style="width: 350px">
				<div class="fs-1"><%= numCollectedDonations %></div>
				<div class="fs-5">donations collected</div>
			</div>
		</div>
	</div>
</main>

<style>
	/* General layout styling */
	body,
	html {
		margin: 0;
		padding: 0;
		font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
		background-color: #f5f5f5; /* Light background for modern look */
	}

	/* Main Wrapper Styling */
	#main-wrapper {
		margin-left: 260px; /* Ensure space for the sidebar */
		padding: 20px;
		background-color: #ffffff; /* White background for content area */
		min-height: 100vh; /* Full height */
	}

	/* Top Bar (with the sidebar toggle button) */
	.bg-white {
		display: flex;
		align-items: center;
		justify-content: space-between;
		background-color: #fff;
		border-bottom: 1px solid #eaeaea;
		padding: 15px 20px;
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	#sidebar-toggler-btn {
		font-size: 20px;
		color: #333;
		cursor: pointer;
	}

	.color-theme {
		color: #2f3b52;
		font-weight: bold;
	}

	/* Flexbox Container for the Dashboard Cards */
	.d-flex {
		display: flex;
		gap: 20px;
		flex-wrap: wrap;
	}

	/* Common Card Style */
	.bg-success,
	.bg-primary,
	.bg-danger {
		padding: 20px;
		border-radius: 8px;
		color: white;
		flex: 1; /* Cards take equal space */
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05); /* Soft shadow for depth */
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}

	/* Donation Cards */
	.bg-success {
		background-color: #4caf50; /* Light green for success */
	}

	.bg-primary {
		background-color: #2196f3; /* Light blue for primary info */
	}

	.bg-danger {
		background-color: #f44336; /* Light red for danger */
	}

	/* Text Styling inside the cards */
	.fs-1 {
		font-size: 36px;
		font-weight: bold;
		margin-bottom: 10px;
	}

	.fs-5 {
		font-size: 18px;
	}

	/* Hover effect for cards */
	.bg-success:hover,
	.bg-primary:hover,
	.bg-danger:hover {
		transform: translateY(-5px); /* Subtle lift on hover */
		box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1); /* Stronger shadow on hover */
	}

	/* Responsive adjustments for mobile screens */
	@media (max-width: 768px) {
		#main-wrapper {
			margin-left: 0; /* Remove space when the sidebar is hidden */
			padding: 10px;
		}

		.d-flex {
			flex-direction: column; /* Stack the cards vertically */
			gap: 10px;
		}

		.bg-success,
		.bg-primary,
		.bg-danger {
			width: 100%; /* Make cards full-width on mobile */
		}
	}
</style>
