<div class="alerts-wrapper">
	<% if(error && error != "") { %>
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<%= error %>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	<% } %> <% if(success && success != "") { %>
	<div class="alert alert-success alert-dismissible fade show" role="alert">
		<%= success %>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	<% } %> <% if(warning && warning != "") { %>
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
		<%= warning %>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
	<% } %>
</div>

<style>
	.alerts-wrapper {
		margin-left: 250px; /* Adjust this to match your sidebar width */
		margin-top: 20px; /* Provides space from the top of the page */
		padding-right: 15px; /* Prevents overflow on the right */
		z-index: 1000; /* Ensures the alerts are on top */
		position: relative; /* Keeps it aligned within the main content area */
	}

	@media (max-width: 768px) {
		.alerts-wrapper {
			margin-left: 0; /* On smaller screens, remove the left margin */
			padding: 10px; /* Provide some internal spacing */
		}
	}

	.alert {
		margin-bottom: 15px; /* Space between consecutive alerts */
	}
</style>
